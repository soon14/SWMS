<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swms.user.repository.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.swms.user.repository.entity.Menu">
        <id column="id" property="id"/>
        <result column="system_code" property="systemCode"/>
        <result column="parent_id" property="parentId"/>
        <result column="type" property="type"/>
        <result column="title" property="title"/>
        <result column="description" property="description"/>
        <result column="permissions" property="permissions"/>
        <result column="component" property="component"/>
        <result column="icon" property="icon"/>
        <result column="order_num" property="orderNum"/>
        <result column="path" property="path"/>
        <result column="enable" property="enable"/>
        <result column="html_target" property="htmlTarget"/>
        <result column="render_template" property="renderTemplate"/>
        <result column="create_user" property="createUser"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="modified_user" property="modifiedUser"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="extension_data" property="extensionData"/>
        <result column="style" property="style"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , `system_code`, parent_id, `type`, title, description, permissions, component, icon, order_num, `path`, enable, html_target,
render_template,create_user, gmt_created, modified_user, gmt_modified , extension_data, style
    </sql>

    <select id="getMenuByRoleIds" resultMap="BaseResultMap">
        select m.*
        from menu m
        left join role_menu rm on m.id = rm.menu_id
        where m.enable = 1 and rm.role_id in
        <foreach collection="roleIds" item="roleId" index="index" open="(" close=")" separator=",">
            #{roleId}
        </foreach>

        <if test="menuTypes != null">
            <foreach collection="menuTypes" item="menuType" open="AND (" close=")" separator="or">
                m.type = #{menuType}
            </foreach>
        </if>
        order by m.order_num asc;
    </select>


    <select id="getNavByRoleCodes" resultMap="BaseResultMap">
        select m.*
        from menu m
        left join role_menu rm on rm.menu_id = m.id
        left join role r on r.id = rm.role_id
        where m.enable = 1 and (m.type = 1 or m.type = 2) and r.code in
        <foreach collection="roleCodes" item="roleCode" index="index" open="(" close=")" separator=",">
            #{roleCode}
        </foreach>
        order by m.order_num asc;
    </select>

    <select id="getMenuTree" resultType="com.swms.user.service.model.MenuTree">
        select *
        from menu
        order by order_num asc
    </select>

    <select id="getMenuTreeByRole" resultType="com.swms.user.service.model.MenuTree">
        select distinct m.*
        from menu m
        left join role_menu rm on m.id = rm.menu_id
        left join role r on r.id = rm.role_id
        where m.enable = 1 and r.status = 1 and m.type !=3 and r.code in
        <foreach collection="roleCodes" item="roleCode" index="index" open="(" close=")" separator=",">
            #{roleCode}
        </foreach>
        order by m.order_num asc;
    </select>

</mapper>
